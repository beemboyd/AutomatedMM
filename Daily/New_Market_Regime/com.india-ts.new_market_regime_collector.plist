<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE plist PUBLIC "-//Apple//DTD PLIST 1.0//EN" "http://www.apple.com/DTDs/PropertyList-1.0.dtd">
<plist version="1.0">
<dict>
    <key>Label</key>
    <string>com.india-ts.new_market_regime_collector</string>
    
    <key>ProgramArguments</key>
    <array>
        <string>/bin/bash</string>
        <string>/Users/maverick/PycharmProjects/India-TS/Daily/New_Market_Regime/run_data_collection.sh</string>
    </array>
    
    <key>WorkingDirectory</key>
    <string>/Users/maverick/PycharmProjects/India-TS/Daily/New_Market_Regime</string>
    
    <!-- Run every 5 minutes (300 seconds) -->
    <key>StartInterval</key>
    <integer>300</integer>
    
    <!-- Run at load for immediate start -->
    <key>RunAtLoad</key>
    <true/>
    
    <!-- Only run during market hours (9:15 AM - 3:30 PM IST, Monday-Friday) -->
    <key>StartCalendarInterval</key>
    <array>
        <!-- Monday through Friday, every 5 minutes from 9:15 AM to 3:30 PM -->
        <dict>
            <key>Weekday</key>
            <integer>1</integer> <!-- Monday -->
            <key>Hour</key>
            <integer>9</integer>
            <key>Minute</key>
            <integer>15</integer>
        </dict>
    </array>
    
    <key>StandardOutPath</key>
    <string>/Users/maverick/PycharmProjects/India-TS/Daily/New_Market_Regime/logs/collector_output.log</string>
    
    <key>StandardErrorPath</key>
    <string>/Users/maverick/PycharmProjects/India-TS/Daily/New_Market_Regime/logs/collector_error.log</string>
    
    <key>EnvironmentVariables</key>
    <dict>
        <key>PATH</key>
        <string>/usr/local/bin:/usr/bin:/bin:/usr/sbin:/sbin:/opt/homebrew/bin</string>
        <key>PYTHONPATH</key>
        <string>/Users/maverick/PycharmProjects/India-TS</string>
        <key>TZ</key>
        <string>Asia/Kolkata</string>
    </dict>
    
    <!-- Keep alive only during market hours -->
    <key>KeepAlive</key>
    <false/>
    
    <!-- Throttle interval to prevent rapid restarts -->
    <key>ThrottleInterval</key>
    <integer>60</integer>
</dict>
</plist>